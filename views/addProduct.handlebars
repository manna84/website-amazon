<form action="/addProduct" method="POST">
    <img src="./img/amazon-logo-black.png" alt="amazon-logo" class="main-logo">
    <section class="signin-info">
        <h2>Add Product</h2>

        {{#each errorMessages}}
        <div class="errors">{{this}}</div>
        {{/each}}

        <label for = name>Product Name</label><br>
        <input type="text" id = name name="name" placeholder="Please enter the product name" value="{{retainData.name}}"><br>
        <label for = lastName>Product Price</label><br>
        <input type="text" id = lastName name="lastName" placeholder="Please enter your last name" value="{{retainData.lastName}}"><br>
        <label for = description>Product Description</label><br>
        <textarea name="description" id="description" cols="30" rows="10"></textarea><br>
        {{!-- <textarea type="text" id = description name="description" placeholder="Please enter product description" value="{{retainData.email}}"><br> --}}
        <label for = category>Product Category</label><br>
        <input type="text" id = category name="category" placeholder="Please enter product category" value="{{retainData.password}}">
        
        <label for="quantity">Product Quantity</label>
        <select name="quantity" id="quantity">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        </select><br><br>

        <input type="radio" id="bestsellerYes" name="bestseller" value="yes">
        <label for="yes">Yes</label><br>
        <input type="radio" id="bestsellerNo" name="bestseller" value="no">
        <label for="no">No</label><br>

        <p>Upload Image</p>
        <button type="submit" class="upload-img">Upload Image</button>
    
    </section>
    
</form>